    "version": "0.2.0",
    "configurations": [
        {
            "name": "serve",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["-d", "serve"]
        },
        {
            "name": "serve --generate-test-game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["-d", "serve", "--generate-test-game"]
        },
        {
            "name": "list users",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["-d", "list", "users"]
        },
        {
            "name": "migrate",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["-d", "migrate"]
        },
        {
            "name": "generate",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["-d", "generate", "game", "--name", "A Barefoot Jaywalk", "--user-id", "1"]
        },
        {
            "name": "test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${relativeFileDirname}",
        },
        {
            "name": "test -test.run <case>",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/cs/battle_test.go",
            "args": ["-test.run", "Test_battle_getBestAttackMoves"]
        },

    ]
}